<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <br />

        @Html.ActionLink("Ir a Buscador", "Buscar", "Home")

        <br />

        <button id="btnAjax">Render Parcial</button>
        <button id="btnApi">Api call</button>
        <div id="parcial"></div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

<script>
    

    $('#btnAjax').click(function () {

        $.get('/Home/RenderPV',function (d,q,e) {
            $('#parcial').html(d);
            console.log(d);
            console.log(q);
            console.log(e);
        });

    });


    $('#btnApi').click(function () {

        $.post('/Buscar/Filtrar', { ID: 1, NombreActor: "refalopa" }, function (d, q, e) {
            console.log(d);
            console.log(q);
            console.log(e);
        });

    });

</script>